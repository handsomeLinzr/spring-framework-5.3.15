	<!-- AOP Configuration -->
	<!--	<aop:aspectj-autoproxy />-->

	<bean id="loggingAspect" class="org.springframework.mytest.expand.aspect.LoggingAspect"/>
	<bean id="bean1" class="org.springframework.mytest.bean.components.aop.Bean1" />

	<aop:config>
		<aop:aspect ref="loggingAspect">
			<aop:pointcut id="myPoint" expression="execution(* org.springframework.mytest.bean.components.aop..*(..))"/>
			<aop:before method="beforeMethod" pointcut-ref="myPoint" />
			<aop:after method="afterMethod" pointcut-ref="myPoint" />
			<aop:around method="aroundMethod" pointcut-ref="myPoint" />
			<aop:after-returning method="afterReturningMethod" pointcut-ref="myPoint" />
			<aop:after-throwing method="afterThrowingMethod" pointcut-ref="myPoint" />
		</aop:aspect>
	</aop:config>

</beans>
